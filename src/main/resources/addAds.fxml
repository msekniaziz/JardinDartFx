<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="800" stylesheets="../../../../Ads/src/main/resources/ads.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.ads.Controllers.addAdsController">

    <!-- Partie gauche -->
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="574.0" prefWidth="503.0" spacing="10">
            <TitledPane style="-fx-background-color: #F5F5F5;" text="Post Your Ad">
                <VBox alignment="TOP_LEFT" prefHeight="321.0" prefWidth="497.0" spacing="10" style="-fx-padding: 10px; -fx-background-color: #F5F5F5;">
                    <HBox spacing="10">
                        <Label text="Title Of Ad:" />
                        <TextField fx:id="title" promptText="Ad title goes here" />
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Description:" />
                        <TextArea fx:id="description" prefHeight="182.0" prefWidth="399.0" promptText="Write details about your product" />
                    </HBox>
                </VBox>
            </TitledPane>
         <Button fx:id="addid" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#addAnnonce" prefHeight="26.0" prefWidth="61.0" style="-fx-background-color: #007BFF;" text="Add" />
         <ImageView fx:id="affichageImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
        </VBox>
    </left>

    <!-- Partie droite -->
    <right>
        <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="469.0" spacing="10">
            <TitledPane prefHeight="350.0" prefWidth="470.0" style="-fx-background-color: #F5F5F5;">
                <VBox alignment="TOP_LEFT" prefHeight="414.0" prefWidth="393.0" spacing="10" style="-fx-padding: 10px; -fx-background-color: #F5F5F5;">
                    <HBox spacing="10" />
                    <HBox spacing="10" />
               <HBox spacing="10">
                  <children>
                     <Label text="Select Ad Category:" />
                     <ComboBox fx:id="category" onAction="#category" promptText="Select Ad Category" />
                  </children>
               </HBox>
               <Label text="Item Price (TN):" />
               <TextField fx:id="price" promptText="Price" />
               <CheckBox fx:id="negotiable" onAction="#negotiable" text="Negotiable" />
               <HBox prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: #FFFFFF;">
                  <children>
                     <Button fx:id="uploadImage" onAction="#upload" style="-fx-background-color: #007BFF;" text="Select Files" />
                     <Label text="Maximum upload file size: 500 KB" />
                     <ImageView fx:id="imageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                  </children></HBox>
                </VBox>
            </TitledPane>
        </VBox>
    </right>

</BorderPane>

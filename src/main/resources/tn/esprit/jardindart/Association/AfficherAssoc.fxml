<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="borderPane" prefHeight="400" prefWidth="600" stylesheets="@../back.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.jardindart.controllers.Association.AfficherAssoc">
    <left>
        <fx:include source="../back.fxml" />
    </left>

    <center>

        <VBox prefHeight="490.0" prefWidth="1020.0" spacing="10">
            <Button fx:id="btn" onAction="#handleAddAssociation" text="Add Association" styleClass="blue-btn"/>

            <AnchorPane>
                <TableView fx:id="table" layoutX="20" layoutY="50" prefHeight="600" prefWidth="1000">
                    <columns>
                        <!-- ID column -->
                        <TableColumn fx:id="idColumn" prefWidth="50" text="ID">
                            <cellValueFactory>
                                <PropertyValueFactory property="id" />
                            </cellValueFactory>
                        </TableColumn>

                        <!-- Name column -->
                        <TableColumn fx:id="nameColumn" prefWidth="100" text="Name">
                            <cellValueFactory>
                                <PropertyValueFactory property="name" />
                            </cellValueFactory>
                        </TableColumn>

                        <TableColumn fx:id="addressColumn" prefWidth="100" text="Address">
                            <cellValueFactory>
                                <!-- Bind cell value to association address -->
                                <PropertyValueFactory property="address" />
                            </cellValueFactory>
                        </TableColumn>

                        <TableColumn fx:id="logoColumn" minWidth="0.0" prefWidth="93.0" text="Logo">
                            <cellValueFactory>
                                <!-- Bind cell value to association logo -->
                                <PropertyValueFactory property="logo" />
                            </cellValueFactory>
                        </TableColumn>

                        <TableColumn fx:id="descriptionColumn" prefWidth="157.4000244140625" text="Description">
                            <cellValueFactory>
                                <!-- Bind cell value to association description -->
                                <PropertyValueFactory property="description" />
                            </cellValueFactory>
                        </TableColumn>

                        <TableColumn fx:id="ribColumn" prefWidth="50" text="RIB">
                            <cellValueFactory>
                                <PropertyValueFactory property="rib" />
                            </cellValueFactory>
                        </TableColumn>

                        <TableColumn fx:id="actionsColumn" prefWidth="50" text="Actions">
                        </TableColumn>
                    </columns>

                    <items>
                        <!-- This will be populated dynamically in the controller -->
                    </items>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </AnchorPane>
        </VBox>
    </center>
</BorderPane>

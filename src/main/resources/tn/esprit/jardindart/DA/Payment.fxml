<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox  fx:controller="tn.esprit.jardindart.controllers.DA.Payment"
      xmlns:fx="http://javafx.com/fxml" spacing="20">

    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="Card Details"/>

    <GridPane>
        <TextField fx:id="numberField" GridPane.columnIndex="1" />
        <Label text="Card Number" GridPane.columnIndex="0"/>

        <TextField  fx:id="expmField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
        <Label text="Expiration" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField  fx:id="expyField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
        <Label text="Expiration" GridPane.rowIndex="1" GridPane.columnIndex="0"/>

        <TextField  fx:id="cvcField" GridPane.rowIndex="2" GridPane.columnIndex="1" />
        <Label text="CVC" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    </GridPane>

    <Button text="Pay" onAction="#handlePayButton"/>

</VBox>
